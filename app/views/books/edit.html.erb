<% if @books.errors.any? %> 
　　　　　<%= pluralize(@books.errors.count,"error") %>
 <ul> 
  <% @books.errors.full_messages.each do |msg| %> 
     <li><%= msg %></li> 
     <% end %> 
  </ul> 
  <% end %>

<div class="row">
	<div class="col-md-6 col-md offset-3">
		<h1>Editing Book</h1>
		<%= form_for(@books) do |f| %> <!-- 最後にエンド -->
			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title, class: "col-xs-12" %>
			</div>
			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "col-xs-12" %>
			</div>
			<div class="actions row">
			<%= f.submit 'Update Book', class: "col-xs-12" %>
			</div>
		<% end %>
		<!-- showリンク -->
		<p>
			<%= link_to "Show", book_path(@books) %><!-- ここのパスは@必要 vieｗに引き渡しているから show -->
			｜
		<!-- Backリンク -->
			<%= link_to "Back", books_path %>
		</p>
	</div>
	<div class="col-md-3"></div>
</div>