<!-- userinfo/newbookの部分テンプレ -->
	<div class="col-xs-3">
		<h2>User info</h2>
			<%= attachment_image_tag users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><!-- イメージが更新されない？=>キーの問題 -->
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= users.name %></th><!-- なぜ参照されないのか？=>テンプレなのに@をつけっぱなしだから -->
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= users.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %><!-- bootstrap -->
			</div>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %> <!-- もしかしてform_forはだめ？=>class: ''をつける -->
			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title, class: 'col-xs-12' %>
			</div>
			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body, class: 'col-xs-12' %>
			</div>
			<div class="actons row">
				<p><%= f.submit 'Create Book', class: 'btn btn-primary col-xs-12 mt-3' %></p> <!-- .erb submit=提示する -->
			</div>
		<% end %>
	</div>